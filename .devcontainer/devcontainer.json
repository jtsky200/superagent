{
  "name": "CADILLAC EV CIS Development",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:18",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/postgres:1": {
      "version": "15"
    },
    "ghcr.io/devcontainers/features/redis:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "ms-python.python",
        "ms-vscode.vscode-json",
        "GraphQL.vscode-graphql",
        "ms-vscode.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "typescript.preferences.includePackageJsonAutoImports": "auto",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },
  "forwardPorts": [3000, 3001, 5432, 6379, 8080, 8000],
  "portsAttributes": {
    "3000": {
      "label": "Frontend (Next.js)",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Backend (NestJS)",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "AI Services (FastAPI)",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    }
  },
  "postCreateCommand": "npm install -g pnpm @nestjs/cli && cd frontend && npm install && cd ../backend && npm install && cd ../ai-services && pip install -r requirements.txt",
  "remoteUser": "node",
  "workspaceFolder": "/workspaces/cadillac-ev-cis"
}

